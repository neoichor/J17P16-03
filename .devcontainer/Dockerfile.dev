# ベースイメージとして、JDK 17を含むEclipse Temurinイメージを選択
FROM eclipse-temurin:17-jdk-jammy

# --- メンテナンス用の変数を定義 ---
ARG MAVEN_VERSION=3.9.11

# --- 必要なシステムツールのインストール ---
# git, curl, sudo など基本ツールに加え、
# ネットワーク診断ツール(iputils-ping)と
# PostgreSQLクライアント(postgresql-client)を追加
RUN apt-get update && export DEBIAN_FRONTEND=noninteractive \
    && apt-get -y install --no-install-recommends \
    git curl unzip procps sudo iputils-ping postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# --- Mavenのインストール ---
ARG MAVEN_HOME=/usr/local/apache-maven
RUN curl -fsSL https://dlcdn.apache.org/maven/maven-3/${MAVEN_VERSION}/binaries/apache-maven-${MAVEN_VERSION}-bin.tar.gz -o /tmp/apache-maven.tar.gz \
    && tar -xzvf /tmp/apache-maven.tar.gz -C /usr/local \
    && mv /usr/local/apache-maven-${MAVEN_VERSION} ${MAVEN_HOME} \
    && rm /tmp/apache-maven.tar.gz
ENV PATH="${MAVEN_HOME}/bin:${PATH}"

# --- Node.jsのインストール ---
# 1. NodeSourceのリポジトリを追加
# 2. apt-getでnodejsをインストール
RUN curl -fsSL https://deb.nodesource.com/setup_lts.x | sudo -E bash - \
    && sudo apt-get install -y nodejs

# --- npm自身を最新版に更新 ---
RUN npm install -g npm@latest

# --- 環境変数PATHを設定 ---
ENV PATH="/usr/local/bin:${PATH}"